@model DogHub.Web.ViewModels.Dashboards.EditDogDataInputModel
@{
    ViewData["Title"] = "Edit Dog Data";
    var breedItems = this.Model.BreedsItems.Select(x => new SelectListItem(x.Value, x.Key));
}

<h2>@ViewData["Title"] for @Model.DogName</h2>
<p>
    <form method="post" asp-controller="Dashboards" asp-action="DeleteDog" id="deleteForm" asp-route-id="@Model.Id">
    </form>
    <button type="submit" class="btn btn-danger" style="background-color:red;" data-toggle="modal" data-target="#deleteModal">Delete Your Dog</button>
</p>


<form method="post" id="editForm">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="DogName"></label>
        <input asp-for="DogName" class="form-control" />
        <span asp-validation-for="DogName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BreedId"></label>
        <select asp-for="BreedId" asp-items="breedItems"></select>
        <span asp-validation-for="BreedId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Gender"></label>
        <select asp-for="Gender" class="form-control" asp-items="@Html.GetEnumSelectList<DogHub.Data.Models.Enums.DogGenderEnum>()"></select>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Age"></label>
        <input asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DogColor"></label>
        <input type="hidden" asp-for="DogColorId" />
        <input asp-for="DogColor" class="form-control" />
        <span asp-validation-for="DogColor" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EyesColor"></label>
        <input type="hidden" asp-for="EyesColorId" />
        <input asp-for="EyesColor" class="form-control" />
        <span asp-validation-for="EyesColor" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Weight"></label>
        <input asp-for="Weight" class="form-control" />
        <span asp-validation-for="Weight" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IsSpayedOrNeutered"></label>
        <select asp-for="IsSpayedOrNeutered" class="form-control">
            <option>True</option>
            <option>False</option>
        </select>
        <span asp-validation-for="IsSpayedOrNeutered" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Sellable"></label>
        <select asp-for="Sellable" class="form-control">
            <option>True</option>
            <option>False</option>
        </select>
        <span asp-validation-for="Sellable" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DogVideoUrl"></label>
        <input asp-for="DogVideoUrl" class="form-control" />
        <span asp-validation-for="DogVideoUrl" class="text-danger"></span>
    </div>

    <hr />
    <input type="hidden" asp-for="Id" />
</form>
<button type="submit" class="btn btn-light" data-toggle="modal" data-target="#modalEdit">Update Dog Data</button>
<input type="button" class="btn btn-light btn-outline-dark" value="Back" onclick="history.go(-1)">

<!-- Modal Edit-->
<div class="modal" id="modalEdit" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm edit</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>
                    Do you confirm these changes?
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="editForm.submit()">Save changes</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Delete-->
<div class="modal" id="deleteModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete Dog</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>
                    Do you want to delete this dog?
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="deleteForm.submit()">Yes</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>
