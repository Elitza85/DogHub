@model DogHub.Web.ViewModels.ViewComponents.LastRegisteredDogsViewModel

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/css/Dogs/CatalogueStyles.css" />
</head>
<body>
    <div style="margin-top:-500px; margin-bottom:70px;">
        <p style="font-weight: bold">@Model.Title</p>
        @foreach (var dog in Model.DogsData)
        {
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <img src="@dog.ImageUrl" style="height:100px; width:auto;">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">@dog.Name</h5>
                            <p class="card-text">Breed: @dog.Breed</p>
                            <p class="card-text"><small class="text-muted">Registered on: @dog.RegisteredOn.ToString("G")</small></p>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</body>