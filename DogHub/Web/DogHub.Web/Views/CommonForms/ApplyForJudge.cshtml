@model DogHub.Web.ViewModels.CommonForms.JudgeApplicationInputModel

@{
    this.ViewData["Title"] = "Apply for a Judge";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/css/CommonForms/JudgeAppFormStyles.css" />
</head>
<body>
    <h2>Apply for Judge in the Competitions Through Filling This Form</h2>

    <form method="post" asp-controller="CommonForms" asp-action="ApplyForJudge" role="form" class="table-bordered col-md-6">

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="YearsOfExperience" class="font-weight-bold required"></label>
            <input asp-for="YearsOfExperience" class="form-control" />
            <span asp-validation-for="YearsOfExperience" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="RaisedLitters" class="font-weight-bold required"></label>
            <input asp-for="RaisedLitters" class="form-control" />
            <span asp-validation-for="RaisedLitters" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="NumberOfChampionsOwned" class="font-weight-bold required"></label>
            <input asp-for="NumberOfChampionsOwned" class="form-control" />
            <span asp-validation-for="NumberOfChampionsOwned" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="HasBeenJudgeAssistant" class="font-weight-bold required"></label>
            <input asp-for="HasBeenJudgeAssistant" type="checkbox" />
            <span asp-validation-for="HasBeenJudgeAssistant" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="AttendedJudgeInstituteCourse" class="font-weight-bold required"></label>
            <input asp-for="AttendedJudgeInstituteCourse" type="checkbox" />
            <span asp-validation-for="AttendedJudgeInstituteCourse" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="JudgeInstituteCertificateUrl" class="font-weight-bold required"></label>
            <input asp-for="JudgeInstituteCertificateUrl" class="form-control" />
            <span asp-validation-for="JudgeInstituteCertificateUrl" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-light" value="Apply" /input>
        </div>
    </form>
</body>
</html>
