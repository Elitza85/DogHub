@model DogHub.Web.ViewModels.Administration.Dashboard.IndexViewModel
@{
    this.ViewData["Title"] = "Admin dashboard";
}

@if (this.TempData.ContainsKey("Message"))
{
    <div class="alert alert-success">@this.TempData["Message"]</div>
}

<h1>@this.ViewData["Title"]</h1>
<h4>Competitions Management Section</h4>
<a class="btn btn-light" asp-area="Administration" asp-controller="Dashboard" asp-action="Create">Create Competition</a>
<hr style="margin:20px;" />
<h4>Breeds Management Section</h4>
<a class="btn btn-light" asp-area="Administration" asp-controller="Dashboard" asp-action="NewBreedsList">Breeds To Approve</a>
<hr style="margin:20px;" />
<h4>Judge Application Forms Management Section</h4>
<a class="btn btn-light" asp-area="Administration" asp-controller="Dashboard" asp-action="JudgesFormsList">Application Forms</a>
<hr style="margin:20px;" />